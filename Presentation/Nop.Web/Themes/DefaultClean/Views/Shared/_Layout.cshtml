@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Html.NopTitle(true)</title>
    <meta http-equiv="Content-type" content="text/html;charset=UTF-8" />
    <meta name="description" content="@(Html.NopMetaDescription())" />
    <meta name="keywords" content="@(Html.NopMetaKeywords())" />
    <link type="text/css" href="/themes/defaultclean/content/css/main.css" rel="stylesheet" />
    <link type="text/css" href="/themes/defaultclean/content/css/bundle.css" rel="stylesheet" />
    <script type="text/javascript" src="/scripts/jquery-1.10.2.min.js"></script>
    <script src="/themes/defaultclean/content/js/unslider.min.js" type="text/javascript"></script>
    <link type="text/css" href="/scripts/layer/skin/layer.css" rel="stylesheet" />
    <script src="/Scripts/layer/layer.js" type="text/javascript"></script>
    <script src="/scripts/public.common.js" type="text/javascript"></script>
    <script src="/scripts/public.ajaxcart.js" type="text/javascript"></script>
    @RenderSection("sec_head", required: false)
</head>
<body>
    @RenderSection("heads_before", required: false)
    <div class="container_48">
        <!--头部-->
        <div id="navWrapper">
            <a href="/"><img id="navLogo" width="170" height="39" src="/themes/defaultclean/content/images/logo.jpg" alt="路过麦田" /></a>
            <div id="navUtilities">
                <table>
                    <tbody>
                        <tr>
                            <td class="last-child">
                                @using (Html.BeginRouteForm("ProductSearch", FormMethod.Get, new { id = "search-form" }))
                                {
                                    <input id="keyWord" type="text" name="q" maxlength="50" placeholder="请输入关键词" value="@Request["q"]" />
                                    <input type="submit" class="search-btn" value="" />
                                }
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            @Html.Action("TopMenu", "Catalog")
            @Html.Action("HeaderLinks", "Common")
            <div class="clear"></div>
        </div>
        <div id="content">
            @RenderBody()
        </div>
    </div>
    <!--底部-->
    @Html.Partial("Footer")
    <!--end-->
    @RenderSection("sec_body", required: false)
</body>
</html>

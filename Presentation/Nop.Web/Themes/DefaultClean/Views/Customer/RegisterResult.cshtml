@using Nop.Web.Models.Customer
@model RegisterResultModel
@{
    Layout = "~/Themes/DefaultClean/Views/Shared/_Layout.cshtml";
}

<div  style="text-align:center;font-size:large">
    @if (string.IsNullOrEmpty(Model.RegFrom))
    {
        <h2>登录成功</h2>
    }
    else
    {
        <h2>@Model.RegFrom 登录成功！</h2>
    }
   
    <div>页面将在<span id="gotoUrl"></span>秒跳，您也可以直接点击链接至<a href="@Url.RouteUrl("HomePage")" style="font-size:x-large" target="_self">首页</a> </div>
</div>

<script type="text/javascript">

    //设定倒数秒数
    var t = 10;
    //显示倒数秒数
    function showTime() {
        t -= 1;
        document.getElementById('gotoUrl').innerHTML = t;
        if (t == 0) {
            location.href = '@Url.RouteUrl("HomePage")';
        } else {
            //每秒执行一次,showTime()
            setTimeout("showTime()", 1000);
        }
         
       
    }


    //执行showTime()
    showTime();
</script>  
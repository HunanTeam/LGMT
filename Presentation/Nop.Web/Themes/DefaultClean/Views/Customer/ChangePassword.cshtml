@model ChangePasswordModel
@using Nop.Web.Models.Customer;
@using Nop.Core;

@{
    Layout = "~/Themes/DefaultClean/Views/Shared/_CustomLayout.cshtml";

    //title
    Html.AddTitleParts("修改密码");

    //个人中心菜单
    ViewBag.Menu = "changepassword";
}
@section sec_head{

}
@section sec_body{

}
<div id="wrap">
    @Html.Partial("CustomerMenu")
    @using (Html.BeginForm("ChangePassword", "Customer", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        if (!string.IsNullOrWhiteSpace(Model.Result))
        {
            <div>修改密码成功！</div>
        }
        @Html.ValidationSummary(true)

        <div class="form-inline">
            <div class="row">
                当前密码： @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>
            <div class="row">
                新密码：  @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>
            <div class="row">
                确认密码 @Html.PasswordFor(m => m.ConfirmNewPassword)
                @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
            </div>
            <div class="row">
                <button type="submit">修改密码</button>
            </div>
        </div>


    }
</div>

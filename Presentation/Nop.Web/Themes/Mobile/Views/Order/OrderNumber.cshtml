@model OrderDetailsModel
@using Nop.Core.Domain.Orders
@using Nop.Web.Models.Order
@{
    var stepName = ((OrderStep)Model.OrderStepId).ToName();
    if (Model.OrderStepId == (int)OrderStep.ConfirmBooking)
    {
        stepName = "待确认预约商品";
    }
    else if (Model.OrderStepId == (int)OrderStep.MeasureForPrice)
    {
        stepName = "支付定金";
    }
    else if (Model.OrderStepId == (int)OrderStep.ManufactureAndInstallment)
    {
        stepName = "支付尾款";
    }
}
<div class="number"><p>订单号： @Model.OrderNumber</p> <p>|</p> <p>@stepName</p></div>